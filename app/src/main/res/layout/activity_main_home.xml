<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/container1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="app.com.example.android.renting.MainHome">
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/maindrawer"
        >

        <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/FramePostView"
            >

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycleViewPost"
                />

        </FrameLayout>




        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start|left"
            android:choiceMode="singleChoice"
            android:background="@color/drawer_color"
            android:divider="@android:color/transparent"
            android:dividerHeight="1dp"
            android:id="@+id/drawerlist"
            />


    </android.support.v4.widget.DrawerLayout>


    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/fab2"
        android:layout_marginBottom="140dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_done"
        android:layout_gravity="bottom|right|end"
        android:visibility="invisible"
        app:elevation="6dp"
        app:backgroundTint="@color/black"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab1"
        android:src="@drawable/ic_note_add"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="bottom|right|end"
        android:visibility="invisible"
        app:elevation="6dp"
        app:backgroundTint="@color/colorPrimaryDark"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_gravity="bottom|right|end"
        android:layout_margin="16dp"
        app:elevation="6dp"/>
        <!--app:layout_behavior="app.com.example.android.renting.ScrollAwareFABBehavior"/>-->

</android.support.design.widget.CoordinatorLayout>







